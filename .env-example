# PING Federate Configuration
# Base URL for your PING Federate server
PING_FEDERATE_BASE_URL=https://your-ping-federate-server.com

# Token endpoint path (relative to base URL)
PING_FEDERATE_TOKEN_ENDPOINT=/as/token.oauth2

# OAuth Client Credentials
# These can also be set as environment variables for security
PING_FEDERATE_CLIENT_ID=your-client-id
PING_FEDERATE_CLIENT_SECRET=your-client-secret

# OAuth Grant Type (typically client_credentials)
PING_FEDERATE_GRANT_TYPE=client_credentials

# API Configuration
# Base URL for the API you are testing
API_BASE_URL=http://localhost:3000

# Test Configuration
# Request timeout in milliseconds
TEST_TIMEOUT=30000

# Connection timeout in milliseconds
TEST_CONNECTION_TIMEOUT=10000

# Logging Configuration
# Directory where log files will be written (relative to project root)
LOG_DIRECTORY=logs

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Whether to log request bodies
LOG_REQUEST_BODY=true

# Whether to log response bodies
LOG_RESPONSE_BODY=true

# Whether to mask sensitive headers (Authorization, API keys, etc.) in logs
LOG_MASK_SENSITIVE_HEADERS=true
